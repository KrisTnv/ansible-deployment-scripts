---

- hosts: serverhost
  become: true
  tasks:

                     #Ubuntu
  - name: Update cache and install apache2 and php packages for Ubuntu
    apt:
      name:
        - apache2
        - libapache2-mod-php
      state: latest
      update_cache: yes
    #when: ansible_distribution == "Ubuntu"
    when: ansible_distribution in ["Debian", "Ubuntu"]


                   #CentOS 
  - name: Update cache and install apache and php packages for CentOS
    dnf:
      name:
        - httpd
        - php
      state: latest
      update_cache: yes
    when: ansible_distribution == "CentOS"
    #when: ansible_distribution in ["Debian", "Ubuntu"]
                     
                     #AnyOS
  - name: Update cache and install apache2 and php for any OS
    package:
      name:
        - "{{ apache_package }}" #Declared in /etc/ansible/hosts
        - "{{ php_package }}"    #Declared in /etc/ansible/hosts
      state: latest
      update_cache: yes

  #--------------------------------------------------------------------------------------------------------